<Window x:Class="PingData.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PingData"
		mc:Ignorable="d"
		Title="Ping Data" 
		Background="{DynamicResource Background}"
		Height="500" 
		Width="475"
		ResizeMode="NoResize">
	
	<Grid>

		<Border
			Width="200"
			Height="200"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Margin="25,25,0,0"
			CornerRadius="10"
			BorderBrush="{DynamicResource Primary}"
			BorderThickness="1">

			<Grid>

				<TextBlock
					Text="Current Ping"
					Height="12"
					Width="65"
					FontSize="10"
					TextAlignment="Center"
					FontWeight="Light"
					FontFamily="Montserrat"
					VerticalAlignment="Top"
					HorizontalAlignment="Left"
					Foreground="{DynamicResource Primary}"
					Background="{DynamicResource Background}"
					Margin="10,-10,0,0"/>

				<StackPanel
					HorizontalAlignment="Center"
					VerticalAlignment="Center">

					<TextBlock
						x:Name="Txt_Ping"
						Text="0"
						FontSize="75"
						FontWeight="Normal"
						FontFamily="Montserrat"
						HorizontalAlignment="Center"
						Foreground="{DynamicResource Text}"/>

					<TextBlock
						Text="ms"
						FontSize="20"
						FontWeight="Normal"
						FontFamily="Montserrat"
						HorizontalAlignment="Center"
						Foreground="{DynamicResource Text}"
						Margin="0,-20,0,0"/>
				</StackPanel>
			</Grid>            
		</Border>

		<Border
			Width="200"
			Height="200"
			VerticalAlignment="Top"
			HorizontalAlignment="Right"
			Margin="0,25,25,0"
			CornerRadius="10"
			BorderBrush="{DynamicResource Primary}"
			BorderThickness="1">

			<Grid>

				<TextBlock
					Text="Controls"
					Height="12"
					Width="45"
					FontSize="10"
					TextAlignment="Center"
					FontWeight="Light"
					FontFamily="Montserrat"
					VerticalAlignment="Top"
					HorizontalAlignment="Left"
					Foreground="{DynamicResource Primary}"
					Background="{DynamicResource Background}"
					Margin="10,-10,0,0"/>

				<Grid
					Width="190"
					Height="25"
					VerticalAlignment="Center"
					Margin="0,0,0,155">

					<TextBox
						x:Name="Txb_Url"
                        LostFocus="Txb_Url_LostFocus"
						Style="{StaticResource TextBox_Style}"
						Width="185"/> 

					<TextBlock
						Text="Url"
						Height="12"
						Width="15"
						FontSize="10"
						FontWeight="Light"
						FontFamily="Montserrat"
						TextAlignment="Center"
						Foreground="{DynamicResource Primary}"
						Background="{DynamicResource Background}"
						VerticalAlignment="Top"
						HorizontalAlignment="Left"
						Margin="10,-7.5,0,0"/>
				</Grid>

				<Grid>
					<Grid.RowDefinitions>

						<RowDefinition
							Height="*"/>

						<RowDefinition
							Height="*"/>

						<RowDefinition
							Height="*"/>

						<RowDefinition
							Height="*"/>

						<RowDefinition
							Height="*"/>
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>

						<ColumnDefinition
							Width="*"/>

						<ColumnDefinition
							Width="*"/>
					</Grid.ColumnDefinitions>
					
					<Grid
						Grid.Row="1"
						Grid.Column="0"
						Height="25"
						Margin="5">
		
						<TextBox
                            x:Name="Txb_Frequency"
							LostFocus="Txb_Frequency_LostFocus"
							Style="{StaticResource TextBox_Style}"/>
		
						<TextBlock
							Text="Frequency"
							Height="12"
							Width="55"
							FontSize="10"
							FontWeight="Light"
							FontFamily="Montserrat"
							TextAlignment="Center"
							Foreground="{DynamicResource Primary}"
							Background="{DynamicResource Background}"
							VerticalAlignment="Top"
							HorizontalAlignment="Left"
							Margin="10,-7.5,0,0"/>
					</Grid>

					<Grid
						Grid.Row="1"
						Grid.Column="1"
						Height="25"
						Margin="5">

						<TextBox
							Style="{StaticResource TextBox_Style}"/>

						<TextBlock
							Text="Average From"
							Height="12"
							Width="72"
							FontSize="10"
							FontWeight="Light"
							FontFamily="Montserrat"
							TextAlignment="Center"
							Foreground="{DynamicResource Primary}"
							Background="{DynamicResource Background}"
							VerticalAlignment="Top"
							HorizontalAlignment="Left"
							Margin="9,-7.5,0,0"/>
					</Grid>

					<Grid
						Grid.Row="2"
						Grid.Column="0"
						Height="25"
						Margin="5">

						<TextBox
							Style="{StaticResource TextBox_Style}"/>

						<TextBlock
							Text="Timeout (ms)"
							Height="12"
							Width="65"
							FontSize="10"
							FontWeight="Light"
							FontFamily="Montserrat"
							TextAlignment="Center"
							Foreground="{DynamicResource Primary}"
							Background="{DynamicResource Background}"
							VerticalAlignment="Top"
							HorizontalAlignment="Left"
							Margin="10,-7.5,0,0"/>
					</Grid>
				</Grid>
			</Grid>
		</Border>

		<Border
			Width="425"
			Height="200"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center"
			Margin="0,0,0,25"
			CornerRadius="10"
			BorderBrush="{DynamicResource Primary}"
			BorderThickness="1">

			<Grid>

				<TextBlock
					Text="Charts"
					Height="12"
					Width="35"
					FontSize="10"
					TextAlignment="Center"
					FontWeight="Light"
					FontFamily="Montserrat"
					VerticalAlignment="Top"
					HorizontalAlignment="Left"
					Foreground="{DynamicResource Primary}"
					Background="{DynamicResource Background}"
					Margin="10,-7.5,0,0"/>
			</Grid>
		</Border>
	</Grid>
</Window>
